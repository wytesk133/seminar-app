extends ../../layouts/admin

block content
  if mode == 'new'
    h1 New User
  else
    h1 Edit User
  if error
    .alert.alert-warning= error
  form(method='post', autocomplete='off')
    .form-group
      label(for='username') Username
      p: input.form-control(type='text', id='username', name='user[username]', placeholder='Username', required, autofocus, value=user.username)
    .form-group
      label(for='full_name') Full Name
      p: input.form-control(type='text', id='full_name', name='user[full_name]', placeholder='Full Name', required, value=user.full_name)
    .form-group
      label(for='password') Password
      if mode == 'new'
        p: input.form-control(type='password', id='password', name='user[password]', placeholder='Password', required)
      else
        p: input.form-control(type='password', id='password', name='user[password]', placeholder='Password')
        p.help-block Leave the fields blank if you don't want to change the password
    .form-group
      label(for='password_confirmation') Password Confirmation
      p: input.form-control(type='password', id='password_confirmation', name='user[password_confirmation]', placeholder='Confirm Password')
    if mode == 'new'
        button.btn.btn-primary(type='submit')
          i.fa.fa-plus-circle
          |  Create
        | &nbsp;
        a.btn.btn-default(href=users_path) Cancel
    else
      button.btn.btn-primary(type='submit')
        i.fa.fa-floppy-o
        |  Save
      | &nbsp;
      a.btn.btn-default(href=user_path(user)) Cancel
