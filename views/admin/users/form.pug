extends ../../layout

block content
  if mode == 'new'
    h1 New User
  else
    h1 Edit User
  if error
    p= error
  form(method='post', autocomplete='off')
    label(for='username') Username
    p: input(type='text', id='username', name='user[username]', placeholder='Username', required, autofocus, value=user.username)
    label(for='full_name') Full Name
    p: input(type='text', id='full_name', name='user[full_name]', placeholder='Full Name', required, value=user.full_name)
    label(for='password') Password
    if mode == 'new'
      p: input(type='password', id='password', name='user[password]', placeholder='Password', required)
    else
      p: input(type='password', id='password', name='user[password]', placeholder='Password')
    label(for='password_confirmation') Password Confirmation
    p: input(type='password', id='password_confirmation', name='user[password_confirmation]', placeholder='Confirm Password')
    if mode == 'new'
      button(type='submit') Create
      a(href=users_path) Cancel
    else
      p Leave the fields blank if you don't want to change the password
      button(type='submit') Save
      a(href=user_path(user)) Cancel
