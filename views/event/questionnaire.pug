extends ../layout

block content
  div(class='row')
    div(class='col-xs-12 col-md-6 col-md-offset-3')
      h1 #{current_event.name} Feedback
      form(method='post')
        each q, index in current_event.questionnaire
          h3= q.question
          if q.type == 'text'
            div(class='form-group')
              input.form-control(name='answers['+index+']', required)
          if q.type == 'rating'
            div(class='radio')
              - for(i=1;i<=5;i++) {
                label(class='radio-inline')
                  input(type='radio', name='answers['+index+']', value=i, required)
                  = i
              - }
        p
          button(type='submit', class='btn btn-primary') Submit
          | &nbsp;
          a(href=event_page_path, class='btn btn-default') Cancel
