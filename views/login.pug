extends layouts/user

block content
  .page-header
    h1.text-center Login
  form(method='post')
    if error != ''
      .alert.alert-warning= error
    .form-group
      input.form-control(type='text', name='username', placeholder='Username', required, autofocus)
    .form-group
      input.form-control(type='password', name='password', placeholder='Password', required)
    button.btn.btn-primary.btn-block(type='submit') Login
